{
    "theme": {
        "name": "Clean & Vibrant Light",
        "mode": "light",
        "palette": {
            "background": "#F3F4F6",
            "surface": "#FFFFFF",
            "primary": "rgb(225, 252, 74)",
            "secondary": "#5B8EFF",
            "tertiary": "#5BFFC2",
            "textPrimary": "#000000",
            "textSecondary": "#000000",
            "textOnPrimary": "#000000",
            "border": "#E5E7EB"
        }
    },
    "typography": {
        "fontFamily": "Inter, sans-serif",
        "sizes": {
            "h1": "32px",
            "h2": "24px",
            "h3": "20px",
            "body": "16px",
            "caption": "12px",
            "kpi": "48px"
        },
        "weights": {
            "bold": 700,
            "semiBold": 600,
            "regular": 400,
            "light": 300
        }
    },
    "layout": {
        "baseUnit": 8,
        "padding": {
            "small": "8px",
            "medium": "16px",
            "large": "24px"
        },
        "gap": {
            "small": "8px",
            "medium": "12px",
            "large": "16px"
        },
        "pageLayoutGap": "20px"
    },
    "components": {
        "card": {
            "borderRadius": "32px",
            "backgroundColor": "palette.surface",
            "padding": "layout.padding.large",
            "border": "none"
        },
        "button": {
            "borderRadius": "9999px",
            "padding": "12px 24px",
            "primary": {
                "backgroundColor": "palette.primary",
                "textColor": "palette.textOnPrimary"
            }
        },
        "icon": {
            "style": "outline",
            "size": "24px",
            "color": "palette.textSecondary"
        },
        "tabs": {
            "style": "pill",
            "activeBackgroundColor": "palette.primary",
            "activeTextColor": "palette.textOnPrimary",
            "inactiveBackgroundColor": "palette.background",
            "inactiveTextColor": "palette.textSecondary",
            "borderRadius": "9999px",
            "padding": "8px 16px"
        },
        "bottomNavBar": {
            "containerBackgroundColor": "palette.surface",
            "containerBorderRadius": "40px",
            "containerPadding": "8px",
            "itemColor": "#000000",
            "activeItem": {
                "backgroundColor": "#000000",
                "color": "#FFFFFF",
                "borderRadius": "32px"
            }
        }
    },
    "dataVis": {
        "lineChart": {
            "lineColor": "palette.tertiary",
            "fill": "linear-gradient(to bottom, rgba(91, 255, 194, 0.2), rgba(91, 255, 194, 0))"
        },
        "radarChart": {
            "lineColor": "palette.secondary"
        },
        "progressIndicator": {
            "trackColor": "#E5E7EB",
            "barColor": "palette.primary"
        }
    }
}